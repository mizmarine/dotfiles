root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.coffee]
indent_style = space

[*.js]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.rb]
indent_style = space

[*.treetop]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4


